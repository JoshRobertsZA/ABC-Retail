@model List<Function.Models.Customer>

@{
    ViewData["Title"] = "Customer Profiles";
}
<div class="customer">
    <div class="customer-container">

        <div class="container py-5">

            <!-- Action buttons -->
            <div class="d-flex flex-wrap gap-2 mb-4">
                <a href="@Url.Action("Add", "Customer")" class="btn btn-lg btn-success shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i> Add New Customer
                </a>
                <a href="@Url.Action("ViewCustomerQueue", "Customer")" class="btn btn-lg btn-info text-white shadow-sm">
                    <i class="bi bi-envelope-fill me-2"></i> View Queue Messages
                </a>
            </div>

            <!-- Search form -->
            <form method="get" asp-action="Index" class="d-flex mb-4 gap-2">
                <input type="text" name="searchTerm" class="form-control form-control-lg"
                       placeholder="Search by name, email..."
                       value="@ViewContext.HttpContext.Request.Query["searchTerm"]"/>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-search me-1"></i> Search
                </button>
            </form>

            <!-- Table card -->
            <div class="card shadow-sm rounded-4 border">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark text-secondary">
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Address</th>
                            <th>Date of Birth</th>
                            <th>Created Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (Model.Any())
                        {
                            foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@customer.FullName</td>
                                    <td>@customer.Email</td>
                                    <td>@customer.PhoneNumber</td>
                                    <td>@customer.Address</td>
                                    <td>@customer.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                    <td>@customer.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", "Customer", new { partitionKey = customer.PartitionKey, rowKey = customer.RowKey })"
                                           class="btn btn-sm btn-primary me-1 mb-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a href="@Url.Action("Delete", "Customer", new { partitionKey = customer.PartitionKey, rowKey = customer.RowKey })"
                                           class="btn btn-sm btn-danger mb-1"
                                           onclick="return confirm('Are you sure you want to delete this customer?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    No customer data available.
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>