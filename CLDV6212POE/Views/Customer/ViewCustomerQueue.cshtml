@model List<Function.Models.QueueMessageViewModel>

@{
    ViewData["Title"] = "Customer Queue Messages";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No messages in the queue.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded border p-2">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark text-white">
                <tr>
                    <th scope="col">Message ID</th>
                    <th scope="col">Message Text</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td class="text-truncate" style="max-width: 200px;" title="@message.MessageId">@message.MessageId</td>
                        <td>@message.MessageText</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>