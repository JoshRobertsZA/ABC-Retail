@model List<string>

<style>
    .customer-container {
        background-color: #1e1e1e;
        padding-top: 150px; /* moved content further down */
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        font-family: Arial, sans-serif;
    }

    .content-wrapper {
        background-color: #2c2c2c;
        padding: 30px 40px;
        border-radius: 10px;
        width: 600px; /* made it wider */
        box-shadow: 0 0 15px rgba(0,0,0,0.7);
        color: #eee;
    }

    h2 {
        text-align: center;
        color: #fff;
        margin-bottom: 25px;
    }

    form {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    input[type="file"] {
        flex-grow: 1;
        margin-right: 10px;
        padding: 6px 8px;
        border: 1px solid #555;
        border-radius: 5px;
        background-color: #333;
        color: #eee;
    }

        input[type="file"]::file-selector-button {
            background-color: #444;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            color: #eee;
            cursor: pointer;
        }

    button {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #0056b3;
        }

    h3 {
        color: #ddd;
        border-bottom: 1px solid #444;
        padding-bottom: 8px;
        margin-bottom: 20px;
    }

    .content-wrapper ul {
        list-style: none;
        padding-left: 0;
        max-height: 250px;
        overflow-y: auto;
    }

        .content-wrapper ul li {
            padding: 8px 0;
            border-bottom: 1px solid #444;
            font-size: 16px;
            display: flex;
            justify-content: space-between;
            color: #ccc;
        }

            .content-wrapper ul li a {
                color: #4ea1ff;
                text-decoration: none;
                margin-left: 10px;
            }

                .content-wrapper ul li a:hover {
                    text-decoration: underline;
                }

</style>

<div class="customer-container">
    <div class="content-wrapper">
        <h2>Contracts</h2>

        <form method="post" enctype="multipart/form-data" asp-action="Upload">
            <input type="file" name="file" />
            <button type="submit">Upload</button>
        </form>

        <h3>Available Contracts</h3>
        <ul>
            @foreach (var file in Model)
            {
                <li>
                    <span>@file</span>
                    <a asp-action="Download" asp-route-fileName="@file">Download</a>
                </li>
            }
        </ul>
    </div>
</div>
