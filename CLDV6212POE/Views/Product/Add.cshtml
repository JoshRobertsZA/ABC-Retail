@model CLDV6212POE.Models.Entities.ProductInfo

@{
    ViewData["Title"] = "Add Product";
}

<div class="customer-container">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Add" method="post" enctype="multipart/form-data" class="mt-4">
                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label fw-bold"></label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label fw-bold"></label>
                            <input asp-for="Category" class="form-control" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StockQuantity" class="form-label fw-bold"></label>
                            <input asp-for="StockQuantity" class="form-control" type="number" min="0" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label for="image" class="form-label">Product Image</label>
                            <input type="file" name="image" class="form-control" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">➕ Add Product</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                    ← Back to Product List
                </a>
            </div>
        </div>
    </div>
</div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
