@model CLDV6212POE.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="ap-container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="ap-form">
        <input type="hidden" asp-for="RowKey" />
        <input type="hidden" asp-for="PartitionKey" />

        <!-- Left Section -->
        <div class="ap-left">
            <div class="ap-image-card">
                <img id="imagePreview"
                     src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/uploadimage.png")"
                     alt="Product Image"
                     class="ap-preview" />

                <label class="ap-upload-label" for="imageInput">Upload Image</label>
                <input type="file" name="image" id="imageInput" accept="image/*" hidden />
                <p class="ap-note">Max image size 50MB</p>
            </div>
        </div>

        <!-- Right Section -->
        <div class="ap-right">
            <h2 class="ap-title">Edit Product</h2>
            <div class="ap-grid">
                <div class="ap-field">
                    <label asp-for="ProductName" class="ap-label"></label>
                    <input asp-for="ProductName" class="ap-input" />
                    <span asp-validation-for="ProductName" class="ap-error"></span>
                </div>

                <div class="ap-field">
                    <label asp-for="Category" class="ap-label"></label>
                    <input asp-for="Category" class="ap-input" />
                    <span asp-validation-for="Category" class="ap-error"></span>
                </div>

                <div class="ap-field ap-full">
                    <label asp-for="Description" class="ap-label"></label>
                    <textarea asp-for="Description" class="ap-textarea"></textarea>
                    <span asp-validation-for="Description" class="ap-error"></span>
                </div>

                <div class="ap-field">
                    <label asp-for="Price" class="ap-label"></label>
                    <input asp-for="Price" class="ap-input" />
                    <span asp-validation-for="Price" class="ap-error"></span>
                </div>

                <div class="ap-field">
                    <label asp-for="StockQuantity" class="ap-label"></label>
                    <input asp-for="StockQuantity" class="ap-input" type="number" />
                    <span asp-validation-for="StockQuantity" class="ap-error"></span>
                </div>
            </div>

            <div class="ap-buttons">
                <button type="submit" class="ap-btn-primary">Save Changes</button>
                <a asp-action="Index" class="ap-btn-cancel">Cancel</a>
            </div>
        </div>
    </form>

</div>

<!-- Footer -->
<div class="footer-container">
    <footer class="footer-text">
        <p class="footer-main">&copy; 2025 ABC Retail</p>
        <p class="footer-sub">Built by <span>Josh Roberts</span></p>
    </footer>
</div>


@section Scripts {
    <script src="~/js/product.js"></script>
}
