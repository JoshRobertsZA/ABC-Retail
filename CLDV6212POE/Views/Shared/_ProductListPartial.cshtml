@model List<CLDV6212POE.Models.Product>

@{
    ViewData["Title"] = "Product Information";
    var userRole = Context.Session.GetString("UserRole");
}

<!-- Products -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="product-all-section">
    <div class="product-page-slider-container">
        <div class="product-page-slider">
            @foreach (var product in Model)
            {
                <div class="product-page-card" style="position: relative;">
                    <div class="product-page-card-body"
                         data-rowkey="@product.RowKey"
                         style="cursor: pointer;">
                        <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "/product1.png")"
                             alt="@product.ProductName"
                             class="product-page-img" />
                        <div class="product-page-info">
                            <h3>@product.ProductName</h3>
                            <p class="product-page-price">@product.Price</p>
                        </div>
                    </div>

                    @if (userRole == "Admin")
                    {
                        <div class="product-action-buttons">
                            <form asp-controller="Product" asp-action="Edit" method="get" style="display:inline;">
                                <input type="hidden" name="rowKey" value="@product.RowKey" />
                                <button type="submit" class="edit-btn">Edit</button>
                            </form>
                            <form asp-controller="Product" asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@product.RowKey" />
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Product Details Modal -->
<div id="productDetailContainer"></div>
