<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content login-modal-content">
            <div class="modal-body p-0 d-flex">

                <div class="login-form-container">
                    <div class="login-header">
                        <h3>Create Account</h3>
                        <p>Join ABC Retail today</p>
                    </div>

                    <form id="registerForm">
                        <label class="login-input-label" for="registerFullName">Full Name</label>
                        <input type="text" id="registerFullName" class="login-input" placeholder="Enter your full name" required>

                        <label class="login-input-label" for="registerEmail">Email</label>
                        <input type="email" id="registerEmail" class="login-input" placeholder="Enter your email" required>

                        <label class="login-input-label" for="registerPassword">Password</label>
                        <input type="password" id="registerPassword" class="login-input" placeholder="********" required>

                        <label class="login-input-label" for="registerConfirmPassword">Confirm Password</label>
                        <input type="password" id="registerConfirmPassword" class="login-input" placeholder="********" required>

                        <button type="submit" class="login-btn-primary">Sign Up</button>

                        <div class="login-footer-text">
                            Already have an account?
                            <a href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a>
                        </div>
                    </form>
                </div>

                <div class="login-image-container">
                    <img src="https://st10265742cldv6212.blob.core.windows.net/background/vc.png" alt="Register background">
                </div>
            </div>
        </div>
    </div>
</div>