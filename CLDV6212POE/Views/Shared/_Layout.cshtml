@{
    var userRole = Context.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ABC Retail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/nav.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/product.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/confirmation.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/header-search.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/product-slider.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/document.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/customer.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body data-logged-in="@(Context.Session.GetString("UserId") != null ? "true" : "false")">
<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container custom-nav-layout">

        <!-- Left side of nav -->
        <div class="nav-left">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="https://st10265742cldv6212.blob.core.windows.net/background/logo.png" alt="Logo">
            </a>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>


                <li class="nav-item">
                    <a asp-controller="Product" asp-action="Index" class="nav-link">Products</a>
                </li>

                @if (userRole == "Admin")
                {
                    <li class="nav-item">
                        <a asp-controller="Customer" asp-action="Index" class="nav-link">Customers</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Document" asp-action="Index" class="nav-link">Contracts</a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link" href="#">Documentation</a>
                </li>
            </ul>
        </div>


        <!-- right side of nav -->
        <div class="nav-right d-flex align-items-center">
            <ul class="navbar-nav d-flex flex-row align-items-center user-nav mb-0">
                @if (Context.Session.GetString("UserId") != null)
                {
                    <li class="nav-item">
                        @if (userRole == "Admin")
                        {
                            <span class="nav-link">
                                Hi @Context.Session.GetString("UserName")
                                <span style="color: @(userRole == "Admin" ? "#d63384" : "#0d6efd"); font-weight: 600;">
                                    [@userRole]
                                </span>
                            </span>
                        }
                        else
                        {
                            <span class="nav-link">Hi @Context.Session.GetString("UserName")</span>   
                        }
                    </li>

                    <li class="nav-separator"></li>

                    <li class="nav-item">
                        <form id="logoutForm" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link p-0">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="#" class="nav-link" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a>
                    </li>

                    <li class="nav-separator"></li>

                    <li class="nav-item">

                        <a href="#" class="nav-link" data-bs-toggle="modal" data-bs-target="#registerModal">Register</a>
                    </li>
                }

                <li class="nav-separator"></li>

                <li class="nav-item">

                    <a asp-controller="Order" asp-action="Index" class="nav-link">Orders</a>
                </li>
            </ul>

            <div class="dropdown ms-auto me-3">
                <a href="/Cart" class="cart-btn" id="cartMenu" aria-expanded="false">
                    <i class="fa fa-shopping-cart"></i>
                    <span id="cart-count" class="badge">0</span>
                </a>

                <div class="dropdown-menu dropdown-menu-end p-2 shadow-lg border-0"
                     id="cart-dropdown">
                    <div id="cart-items-container">
                        <p class="text-center text-muted mb-0">Your cart is empty</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

@await Html.PartialAsync("_LoginModalPartial")
@await Html.PartialAsync("_RegisterModal")

<div>
    <main role="main">
        
        @if (TempData["Alert"] != null)
        {
            var alert = TempData["Alert"] as CLDV6212POE.ViewModel.AlertViewModel;
            @await Html.PartialAsync("_Alert", alert)
        }

        @RenderBody()
    </main>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/cart.js" asp-append-version="true"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>